<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.whitecaps.UploadDatabase">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/logoimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="140dp"
            tools:layout_editor_absoluteY="129dp"
            tools:layout_editor_absoluteX="117dp"/>

    <Button
        android:id="@+id/routine"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:text="Upload Routine"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="190dp"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintHorizontal_bias="0.778"
        app:layout_constraintVertical_bias="0.111"
        android:layout_alignRight="@+id/textInputLayout"
        android:layout_alignEnd="@+id/textInputLayout"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/student"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:text="Upload Student"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintHorizontal_bias="0.778"
            app:layout_constraintVertical_bias="0.111"
            android:layout_alignRight="@+id/textInputLayout"
            android:layout_alignEnd="@+id/textInputLayout"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/teacher"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:text="Upload Teacher"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintHorizontal_bias="0.778"
            app:layout_constraintVertical_bias="0.111"
            android:layout_alignRight="@+id/textInputLayout"
            android:layout_alignEnd="@+id/textInputLayout"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
