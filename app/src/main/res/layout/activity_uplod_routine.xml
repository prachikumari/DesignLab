<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.whitecaps.UploadRoutine">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="20dp"
            android:text="Upload Routine \n(in *.csv format)"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/stream"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="3dp"
        android:layout_marginTop="110dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/semester" />

        <Spinner
            android:id="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="3dp"
            android:layout_marginTop="160dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="100dp" />



        <Button
            android:id="@+id/buttonChoose"
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="Choose File"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.778"
            app:layout_constraintVertical_bias="0.111"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />


        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="UPLOAD FILE"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintHorizontal_bias="0.778"
            app:layout_constraintVertical_bias="0.111"
            tools:layout_editor_absoluteY="0dp"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="8dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="350dp"
            android:background="#000000"/>

        <Button
            android:id="@+id/template"
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="DOWNLOAD TEMPLATE"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"
            android:layout_marginRight="40dp"
            app:layout_constraintHorizontal_bias="0.778"
            app:layout_constraintVertical_bias="0.111"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            tools:text="Download Template"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
